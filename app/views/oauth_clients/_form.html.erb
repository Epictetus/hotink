<div class="field">
	<label for="client_application_name">Name*</label>
	<%= f.text_field :name, :class => :text_input %>
</div>
<div class="field">
	<label for="client_application_url">Main Application URL*</label>
	<%= f.text_field :url, :class => :text_input %>
</div>
<div class="field">
	<label for="client_application_callback_url">Callback URL*</label>
	<%= f.text_field :callback_url, :class => :text_input %>
</div>
<div class="field">
	<label for="client_application_support_url">Support URL</label>
	<%= f.text_field :support_url, :class => :text_input %>
</div>
<div class="field">
	<p>Included data</p>
	<label for="client_application_include" style="display:inline">Account ID</label><%= f.check_box :include, {}, "account_id" %><br/>
	<p><small>Hot Ink can pass the data above along to your application when it loads your application canvas page. However, only the data you request here will be passed along. You can edit this setting at any time.</small></p>
</div>


