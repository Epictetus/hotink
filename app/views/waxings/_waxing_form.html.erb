<div id="waxing-form-<%= @waxing.id %>">
	<p><strong>Caption:</strong></p>
		<% remote_form_for [@account, @waxing] do |f| %>
		<%= text_area_tag "waxing[caption]", @waxing.caption, :id=>"waxing_caption_#{@waxing.id}" %>
		<%= button_link_to_function "Save caption","$('edit_waxing_#{@waxing.id}').onsubmit();$(this).next().show();$('waxing_caption_#{@waxing.id}').disable();", :class => "tiny"  %><img src="/loading_small_yellow.gif" style="display:none;border:none;" class="spinner"/>
		<% end %>
	<script type="text/javascript" charset="utf-8">
		$('waxing_caption_<%= @waxing.id %>').focus();
	</script>
</div>