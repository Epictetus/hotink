<h1>Welcome to Hot Ink</h1>
<%= "<p>" + flash[:notice] + "</p>" if flash[:notice] %>
<form action='/sso/login' method="POST">
<div class="column_holder clearfix">  
	<div class="third_column left_column">
		<%= label_tag :login, "Login/Email" %>
	</div>
	<div class="two_thirds_column right_column">
  		<%= text_field_tag :login, "", :class => "text_input", :tabindex => 1 %>
	</div>
</div>
<div class="column_holder clearfix">  
	<div class="third_column left_column">
  		<%= label_tag :password %>
	</div>
	<div class="two_thirds_column right_column">
  		<%= password_field_tag :password, "", :class => "text_input", :tabindex => 2  %>
		
  	</div>
</div>
<div class="column_holder clearfix">  
	<div class="third_column left_column">
		<%= check_box_tag :remember_me, "1", false, :tabindex => 3 %>
	</div>
	<div class="third_column right_column">
	  	<%= label_tag :remember_me %>
	</div>
	<div class="third_column left_column">
		<small style="text-align: right; margin-right: 1em;"><%= link_to "Forgot your password?", '/password_resets/new', :class=>"weblink" %></small>
	</div>
</div>
<div class="column_holder clearfix">  
	<div class="third_column left_column"> </div>
	<div class="two_thirds_column right_column">
  		<%= button_link_to_submit "Login", :class => "large", :tabindex => 4 %>
	</div>
</div>
</form>