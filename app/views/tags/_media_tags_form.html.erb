<div id="media_tags_form">
	<% form_remote_tag :url=>account_mediafile_tags_url(@account, @mediafile), :method => :post do -%>
	<p>
		<%= text_field_tag "new_tag_list", "Add tags here", :class=>"newtag text_input", :onclick=>"clearText(this)", :onblur=>"addText(this)" %>
		<%= button_link_to_submit("Add") %><br />
		<em>Separate tags with a comma</em>
	</p>
	<% end %>
	<p>
		<% for tag in @mediafile.tags %>
			<%= link_to_remote("x", :url=> account_mediafile_tag_url(@account, @mediafile, tag), :method => :delete) + "&nbsp;#{tag.name.sub(" ", "&nbsp;")}&nbsp;&nbsp;" %>
		<% end %>
	</p>
</div>