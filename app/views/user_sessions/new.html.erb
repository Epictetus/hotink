<h1>Welcome to Hot Ink</h1>
<%= "<p>" + flash[:notice] + "</p>" if flash[:notice] %>
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
<div class="column_holder clearfix">  
	<div class="third_column left_column">
		<%= f.label :login %>
	</div>
	<div class="two_thirds_column right_column">
  		<%= f.text_field :login, :class => "text_input" %>
	</div>
</div>
<div class="column_holder clearfix">  
	<div class="third_column left_column">
  		<%= f.label :password %>
	</div>
	<div class="two_thirds_column right_column">
  		<%= f.password_field :password, :class => "text_input" %>
		
  	</div>
</div>
<div class="column_holder clearfix">  
	<div class="third_column left_column">
		<%= f.check_box :remember_me %>
	</div>
	<div class="third_column right_column">
	  	<%= f.label :remember_me %>
	</div>
	<div class="third_column left_column">
		<small style="text-align: right; margin-right: 1em;"><%= link_to "Forgot your password?", new_password_reset_url, :class=>"weblink" %></small>
	</div>
</div>
<div class="column_holder clearfix">  
	<div class="third_column left_column"> </div>
	<div class="two_thirds_column right_column">
  		<%= button_link_to_submit "Login", :class => "large" %>
	</div>
</div>
<% end %>