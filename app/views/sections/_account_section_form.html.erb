<% remote_form_for([@account, @section]) do |f| %>
  <%= f.error_messages %>
  <p>
	<%= f.label :name, "New section name" %><br />
	<%= f.text_field :name, {:style=>"width:200px;"} %><br />
	<%= hidden_field_tag('article_id', @article.id) if @article%>
	<select id="section_parent_id" name="section[parent_id]" style="width:200px;"><%= options_for_category_select(@account.sections, @section) %></select><br />
    <%= f.submit @section.new_record? ? "Create" : "Update" %>
  </p>
<% end %>