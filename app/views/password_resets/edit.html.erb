<h1>Change My Password</h1>
 
<% form_for @user, :url => password_reset_url, :method => :put do |f| %>
  <%= f.error_messages %>
	<div class="column_holder clearfix">  
		<div class="third_column left_column">
  				<%= f.label :password %>
		</div>
		<div class="two_thirds_column right_column">
  			<%= f.password_field :password, :class=>"text_input"%>
		</div>
	</div>
	<div class="column_holder clearfix">  
		<div class="third_column left_column">
  			<%= f.label :password_confirmation %>
		</div>
		<div class="two_thirds_column right_column">
  			<%= f.password_field :password_confirmation, :class=>"text_input" %>
		</div>
  	</div>
	<div class="column_holder clearfix">  
		<div class="third_column left_column"></div>
		<div class="two_thirds_column right_column">
  			<%= button_link_to_submit "Update my password and log me in" %>
		</div>
	</div>
<% end %>