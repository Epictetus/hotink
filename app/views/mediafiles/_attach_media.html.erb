<div id="upload_media_container" class="column_holder clearfix">
	<p class="close_button"><a href="#" class="close_window" onclick="page_overlay.end();return false;">&nbsp;</a></p>
	<div class="title_bar clearfix">
		<div class="actions">	
			<h1>Attach media </h1>
			<% if @article -%>
				<%= button_link_to_remote 'Attach archive media &raquo;', :url=>new_account_article_waxing_path(@account, @article, :format=>:js), :method => :get, :html=>{ :class=>'primary'} %>
			<% elsif @entry -%>
				<%= button_link_to_remote 'Attach archive media &raquo;', :url=>new_account_blog_entry_waxing_path(@account, @blog, @entry, :format=>:js), :method => :get, :html=>{ :class=>'primary'} %>
			<% end -%>
		</div>
	</div>
	<div id="upload_media_form" class="two_thirds_column">
				<h4>Upload media file</h4>
			<div>
				<% if @article -%>
					<% form_for [@account, @article, @mediafile], :html=>{:multipart=>true, :target=>"upload_frame", :onsubmit => "page_overlay.end();$('account_article_mediafiles_list').insert('<img class=\"mediafile_loading\" style=\"margin: 1em 1.5em;\" src=\"/loading.gif\" />');"} do |f| %>
						<%= f.error_messages %>
						<p>
							<%= f.label :file, "Media file" %><br />
							<%= f.file_field :file, :class=>"text_input" %>			
						</p>
						<p style="text-align:left;padding-top:10px;">
							<%= button_link_to_submit "Upload", :class=>"large save" %>
						</p>
						<%= hidden_field_tag 'iframe_post', true %>
					<% end %>
				<% elsif @entry -%>
					<% form_for [@account, @blog, @entry, @mediafile], :html=>{:multipart=>true, :target=>"upload_frame", :onsubmit => "page_overlay.end();$('account_blog_entry_mediafiles_list').insert('<img class=\"mediafile_loading\" style=\"margin: 1em 1.5em;\" src=\"/loading.gif\" />');"} do |f| %>
						<%= f.error_messages %>
						<p>
							<%= f.label :file, "Media file" %><br />
							<%= f.file_field :file, :class=>"text_input" %>			
						</p>
						<p style="text-align:left;padding-top:10px;">
							<%= button_link_to_submit "Upload", :class=>"large save" %>
						</p>
						<%= hidden_field_tag 'iframe_post', true %>
					<% end %>
				<% end -%>
			</div>
	</div>
	<div class="third_column">
			<p class="faq question">What types of file can I upload?</p>
			<p class="faq answer">You can upload any type of file you want, but the system offers special support for a 
				few file types. They are:</p>
				<dl class="faq">
					<dt>jpeg, jpg, png, gif, tiff, or bmp</dt>
					<dd>Images will be displayed alongside your article.</dd>
					<dt>mp3</dt>
					<dd>Audio is playable in the browser window.</dd>
				</dl>
			<p class="faq answer">Other files can also be uploaded, attached and captioned alongside articles, but with no 
				special consideration.</p>
		</div>
</div>
<script type="text/javascript" charset="utf-8">
	load_button_fix();
</script>