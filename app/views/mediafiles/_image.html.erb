<div class="token" href="#" onclick="return false;">
	  <span class="x" onclick="<%=remote_function(:url=>account_article_waxing_url(@account, @article, image.waxings[0]), :method=>:delete, :confirm=>"Are you sure you want to detach this media?\n\nAny caption saved with this article will be lost, though you'll still be able to find the media in your archive.", :after=>"new Effect.Fade($(this.parentNode));", :complete=>"new Ajax.Request('#{ account_article_mediafiles_url(@account, @article, :format=>:js) }', {method:'get'});" ) %>; return false;" onmouseover="this.className='x_hover'" onmouseout="this.className='x'">&nbsp;</span>
	  <%= link_to_remote image_tag(image.file.url(:system_thumb), :align=>"right"), :url=>edit_account_article_mediafile_url(@account, @article, image, :format=>:js), :method=>:get %>
	<div id="waxing-<%= image.waxings[0].id %>">
		  <p><strong>Caption:</strong></p>
		  <p><%= link_to_remote ((image.waxings[0].caption.nil? || image.waxings[0].caption.strip =="" ) ? "[Click here to add a caption]" : image.waxings[0].caption), :url=>edit_account_article_waxing_url(@account, @article, image.waxings[0]), :method=>:get %></p>
	</div>
</div>