<h1>Edit page</h1>
<% semantic_form_for(@page) do |form| %>
	<% form.inputs :class => "grid_12" do %>
		<%= form.input :name, :label => (form.object.parent_url + "/"), :wrapper_html => { :class => "grid_8" } %>
		<%= form.commit_button :class => "grid_4" %>
		<%= form.input :parent, :collection => (page_form_options_collection(@account)  - [@page]).collect{ |page| [page.url, page.id] }, :include_blank => "Select a parent page", :wrapper_html => { :class => "grid_12 alpha"} %>
		<%= form.input :contents %>
	<% end %>
<% end %>