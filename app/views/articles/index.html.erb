<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Summary</th>
    <th>Date</th>
  </tr>

<% for article in @articles %>
  <tr>
    <td><%=link_to h(article.display_title), edit_account_article_url(@account, article) %></td>
    <td><%=h article.subtitle %></td>
    <td><%=h article.summary %></td>
    <td><%=h article.date %></td>
    <td><%= link_to 'Destroy', [@account, article], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New article', new_account_article_path(@account) %>
