<div id="articles">
<div class="title_bar"><h1>Articles</h1><%= button_link_to 'New article', new_account_article_path(@account), :class=>"" %></div>


<p><input id="select_all_head" type="checkbox" class="select_all"/><label for="select_all_head">&nbsp;Select all</label></p>

<ol>
<% for article in @articles %>
	<% unless article.created_at == article.updated_at %>
	  <li onclick="" onmouseover="$(this).addClassName('highlighted');" onmouseout="$(this).removeClassName('highlighted');">
	    <%= link_to "&nbsp;", [@account, article], :confirm => "You are about to delete the article: \n \n &quot;" + h(article.display_title) + "&quot;\n \n Click 'OK' to delete or 'Cancel' to return to the page.", :method => :delete, :class=>"delete" %>
		<div><input type="checkbox" value="<%= article.id %>"/></div>
		<div class="article">
			<h1>&ldquo;<%=link_to h(article.display_title), edit_account_article_url(@account, article) %>&rdquo;</h1>
			<div><%= link_to "Edit", edit_account_article_url(@account, article) %> | <%= link_to "Quick View" %> </div>
		</div>
		<div class="date"><%=h article.date.to_s(:standard) %></div>
	  </li>
	<% end %>
<% end %>
</ol>

<p><input id="select_all_foot" type="checkbox" class="select_all" /><label for="select_all_foot">&nbsp;Select all</label></p>

<br />

<script type="text/javascript" charset="utf-8">
	// Activate table header checkboxes select_all functionality
	$$('.select_all').each(	function(element){ Event.observe(element, 'click', function( event ) { if (element.checked){ $$('ol input[type="checkbox"], .select_all').each(function(node){ node.checked = 'checked' });} else { $$('ol input[type="checkbox"], .select_all').each(function(node){ node.checked = null }); } }); });
	
</script>

</div><!-- /articles -->