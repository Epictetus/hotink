<div id="blog" class="clearfix form">
<h1><%= @blog.new_record? ? "New blog" : "Manage blog" %></h1>
</div>

<% semantic_form_for [@account, @blog] do |form| %>
	<% form.inputs do %>
		<%= form.input :title %>
		<%= form.input :slug, :hint => "Leave this blank to have a slug auto-generated for you." %>
		<%= form.input :status, :hint => "Is this blog active?" %>		
		<%= form.input :description %>
	<% end %>
	<%= form.buttons %>
<% end %>
