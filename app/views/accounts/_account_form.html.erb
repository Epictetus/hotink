<div id="account" class="clearfix">
	<p class="close_button"><a href="#" class="close_window" onclick="page_overlay.end();return false;">&nbsp;</a></p>
	<h1>Account settings</h1>
		
	<div id="account_settings" class="tab_window clearfix">
		<ol id="tablist" class="left">
			<li class="selected">General</li>
			<li>Users</li>
			<li>Images</li>
			<li>Categories</li>
			<% if permit? "admin" %>
				<li>Accounts</li>
			<% end %>
		</ol>
		<div id="general-window">
		<% form_for(@account) do |f| %>
		<%= button_link_to_submit @account.new_record? ? "Create your account" : "Save changes", :class=>"save large" %>
			<h2>General settings</h2>
	  		<%= f.error_messages %>
			  <div>
			    <%= f.label :name, "Account" %>
				<%= f.text_field :name, :class =>"text_input account_name", :disabled => true %>
			  </div>
			  <div>
				<%= f.label :formal_name, "Formal name" %>
				<%= f.text_field :formal_name, :class =>"text_input formal_name" %>
			  </div>
			  <div>
			    <%= f.label :time_zone, "Time zone" %>
			    <%= f.time_zone_select :time_zone, /Canada|Newfoundland|Saskatchewan/, :include_blank => true  %>
			  </div>
			<% end %>	
		</div>
		
		<div id="users-window"  class="index" style="display:none">
			<h2>Users</h2>
			<ol id="users">
				<%= render @account.has_staff %>
			</ol>
			<%= render :partial => 'user_activations/new_activation_form' %>	
		</div>
		
		<div id="images-window" style="display:none">
			<h2>Image settings</h2>
		</div>
		
		<div id="categories-window" style="display:none;">
			
		</div>
		<% if permit? "admin" %>
		<div id="accounts-window" class="index" style="display:none">
			<h2>Accounts</h2>
			<ol id="accounts" class="index">
				<%= render @accounts %>
			</ol>
			<%= render :partial => 'account_activations/new_activation_form' %>
		</div>
		<% end %>
		
	</div>
	<script type="text/javascript" charset="utf-8">
		load_button_fix();
		$('account_settings').select('ol#tablist li').each( function(el){ new Tab( el, el.hasClassName('selected') ) });
	</script>
</div>